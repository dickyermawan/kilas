# Server Configuration
PORT=3000

# Admin Credentials for Dashboard Login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# API Authentication
# Leave empty to disable API authentication
# Set a strong secret key to enable authentication
API_KEY=your_secret_api_key_here

# CORS Configuration
# Use * to allow all origins
# Or specify comma-separated domains: example.com,api.example.com
CORS_ORIGIN=*

# Storage Paths
SESSION_DIR=./sessions
MEDIA_DIR=./media

# Optional: Logging Level
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info
